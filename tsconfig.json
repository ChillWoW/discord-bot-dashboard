{
    "compilerOptions": {
        "target": "ES2022",
        "module": "CommonJS",
        "moduleResolution": "Node",
        "strict": true,
        "noImplicitAny": true,
        "declaration": false,
        "skipLibCheck": true,
        "strictNullChecks": true,
        "resolveJsonModule": true,
        "outDir": "dist",
        "typeRoots": ["./node_modules/@types"]
    },
    "include": ["src", "src/data/*.json", "src/images/*.png"],
    "exclude": ["node_modules"]
}
